{
  "defaultSeverity": "warn",
  "extends": "tslint:recommended",
  "rules": {
    "align": true,
    "await-promise": {  "options": ["DeferredPromise", "RequestPromise"] },
    "class-name": false,
    "comment-format": {  "options": ["check-space"] },
    "curly": true,
    "deprecation": true,
    "eofline": true,
    "interface-name": {  "options": ["never-prefix"] },
    "linebreak-style": {  "options": ["LF"] },
    "object-literal-key-quotes": {  "options": ["as-needed"] },
    "object-literal-sort-keys": false,
    "only-arrow-functions": [false],
    "ordered-imports": true,
    "max-classes-per-file": [false, 1],
    "max-line-length": [false],
    "member-ordering": [false],
    "no-angle-bracket-type-assertion": false,
    "no-bitwise": false,
    "no-boolean-literal-compare": true,
    "no-console": false,
    "no-consecutive-blank-lines": true,
    "no-empty": {  "options": ["allow-empty-catch"] },
    "no-empty-interface": false,
    "no-floating-promises": true,
    "no-for-in-array": true,
    "no-reference": false,
    "no-string-literal": false,
    "no-trailing-whitespace": true,
    "no-unbound-method": {  "options": ["ignore-static"] },
    "no-unnecessary-type-assertion": true,
    "no-unused-expression": { "options": ["allow-tagged-template"] },
    "no-unused-variable": true,
    "prefer-const": true,
    "return-undefined": true,
    "semicolon": {  "options": ["always"] },
    "space-before-function-paren": true,
    "strict-type-predicates": true,
    "trailing-comma": {  "options": [{"multiline": "never", "singleline": "never" }] },
    "triple-equals": false,
    "unified-signatures": false,
    "variable-name": {  "options": ["ban-keywords"] },
    "whitespace": true
  },
  "rulesDirectory": [],
  "exclude": [
    "node_modules"
  ]
}
